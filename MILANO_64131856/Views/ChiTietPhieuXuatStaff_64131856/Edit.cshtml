@model MILANO_64131856.Models.ChiTietPhieuXuat

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chỉnh sửa Chi tiết Phiếu Xuất</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f3f0;
            color: #4d3e33;
            margin: 0;
            padding: 0;
        }

        .form-horizontal {
            max-width: 600px;
            margin: 30px auto;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h4 {
            color: #6a4e3b;
            margin-bottom: 20px;
        }

        label {
            color: #4d3e33;
            font-weight: bold;
        }

        .form-control {
            border: 1px solid #c7a799;
            border-radius: 4px;
            padding: 8px;
        }

        .btn-default {
            background-color: #6a4e3b;
            color: #fff;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-default:hover {
                background-color: #5a3e2b;
            }

        .text-danger {
            color: #d9534f;
        }

        a {
            color: #6a4e3b;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .form-group {
            margin-bottom: 15px;
        }

        .col-md-10 {
            display: flex;
            flex-direction: column;
        }

        .form-group input[type="submit"] {
            align-self: flex-start;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Chỉnh sửa Chi tiết Phiếu Xuất</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaChiTietXuat)

            <div class="form-group">
                @Html.LabelFor(model => model.MaPhieuXuat, "Mã Phiếu Xuất", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaPhieuXuat", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaPhieuXuat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaSanPham, "Mã Sản Phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaSanPham", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaSanPham, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoLuong, "Số Lượng", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DonGia, "Đơn Giá", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ThanhTien, "Thành Tiền", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThanhTien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div style="text-align: center; margin-top: 20px;">
        @Html.ActionLink("Quay lại danh sách", "Index")
    </div>
</body>
</html>
