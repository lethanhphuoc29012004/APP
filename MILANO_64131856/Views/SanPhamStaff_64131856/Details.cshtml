@model MILANO_64131856.Models.SanPham

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<style>
    .product-details {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        background-color: #f9f9f9;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .product-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .product-details h4 {
        color: #333;
        margin-bottom: 15px;
    }

    dl.dl-horizontal {
        text-align: left;
    }

        dl.dl-horizontal dt {
            font-weight: bold;
            color: #555;
        }

        dl.dl-horizontal dd {
            margin-bottom: 10px;
            color: #444;
        }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

        .action-links a {
            display: inline-block;
            padding: 10px 15px;
            margin: 5px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            transition: background-color 0.3s, transform 0.3s;
        }

        .action-links .edit-link {
            background-color: #007bff; /* Xanh dương */
        }

            .action-links .edit-link:hover {
                background-color: #0056b3; /* Xanh đậm */
                transform: translateY(-3px);
            }

        .action-links .back-link {
            background-color: #28a745; /* Xanh lá */
        }

            .action-links .back-link:hover {
                background-color: #218838; /* Xanh lá đậm */
                transform: translateY(-3px);
            }
</style>

<div class="product-details">
    <h4>THÔNG TIN SẢN PHẨM</h4>
    <hr />
    <img style="width:160px;" src="@Url.Content("~/Images/" + Model.AnhSanPham)" alt="Ảnh sản phẩm" />
    <dl class="dl-horizontal">

        <dt>
            Tên Sản Phẩm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSanPham)
        </dd>
        <dt>
            Giá Bán
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiaBan)
        </dd>
        <dt>
            Số Lượng Tồn
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>
        <dt>
            Loại Sản Phẩm
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LoaiSanPham.TenLoai)
        </dd>
    </dl>
</div>

<p class="action-links">
    @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.MaSanPham }, new { @class = "edit-link" }) |
    @Html.ActionLink("Quay Lại", "Index", new { }, new { @class = "back-link" })
</p>


