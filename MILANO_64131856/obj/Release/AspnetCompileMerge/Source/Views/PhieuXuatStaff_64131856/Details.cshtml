@model MILANO_64131856.Models.PhieuXuat

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chi Tiết Phiếu Xuất</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f9fc;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h4 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        .dl-horizontal dt {
            font-weight: bold;
            color: #555;
            width: 30%;
            float: left;
            clear: both;
            padding-right: 10px;
        }

        .dl-horizontal dd {
            margin-left: 0;
            padding-left: 20px;
            color: #555;
        }

        .action-links {
            text-align: center;
            margin-top: 20px;
        }

            .action-links a {
                font-size: 16px;
                padding: 10px 20px;
                text-decoration: none;
                border: 1px solid #28a745;
                border-radius: 5px;
                color: #28a745;
                background-color: white;
                transition: background-color 0.3s, color 0.3s;
            }

                .action-links a:hover {
                    background-color: #28a745;
                    color: white;
                }
    </style>
</head>
<body>
    <div class="container">
        <h4>Chi Tiết Phiếu Xuất</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Ngày Xuất
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NgayXuat)
            </dd>

            <dt>
                Tổng Tiền
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TongTien)
                <span class="currency">VNĐ</span>
            </dd>
        </dl>
    </div>

    <div class="action-links">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaPhieuXuat }) |
        @Html.ActionLink("Quay lại danh sách", "Index")
    </div>
</body>
</html>
