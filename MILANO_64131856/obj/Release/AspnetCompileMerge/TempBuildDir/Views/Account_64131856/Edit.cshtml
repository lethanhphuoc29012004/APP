@model MILANO_64131856.Models.Account

@{
    ViewBag.Title = "Chỉnh sửa tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; color: #0056b3;">CHỈNH SỬA TÀI KHOẢN</h2>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f3f4f6;
        margin: 0;
        padding: 0;
    }

    .edit-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #333;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 24px;
    }

    .form-horizontal .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: bold;
        color: #0056b3;
        font-size: 14px;
        text-align: left;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 10px;
        font-size: 14px;
        width: 100%;
    }

    .btn-default {
        background-color: #0056b3;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-default:hover {
            background-color: #003d80;
            transform: scale(1.05);
        }

    .back-link {
        color: #0056b3;
        text-decoration: none;
        font-weight: bold;
        display: block;
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
        transition: color 0.3s;
    }

        .back-link:hover {
            color: #003d80;
        }
</style>

<div class="edit-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AccountID)

        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Pass, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu thay đổi" class="btn btn-default" />
            </div>
        </div>
    }
</div>

<div>
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "back-link" })
</div>
