@{
    ViewBag.Title = "Đăng Nhập";
    Layout = null;
}
<style>
    /*css cho trang dang nhap*/
    /* Tổng thể trang */
    body {
        font-family: 'Arial', sans-serif;
        background-image: url('/Images/backgroundcoffee.jpeg');
        height: 100vh;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Container chính */
    .login-container {
        text-align: center;
        max-width: 400px;
        width: 100%;
        background: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        padding: 20px 30px;
    }

    /* Logo */
    .login-logo img {
        max-width: 150px;
        margin-bottom: 20px;
    }

    /* Tiêu đề */
    .login-box h2 {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        text-transform: uppercase;
        font-weight: bold;
    }

    /* Form */
    .login-box .form-group {
        margin-bottom: 15px;
    }

    .login-box label {
        font-size: 14px;
        color: #555;
        font-weight: bold;
    }

    .login-box input {
        width: 100%;
        padding: 10px;
        font-size: 14px;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-top: 5px;
    }

        .login-box input:focus {
            border-color: #6a5acd;
            outline: none;
            box-shadow: 0 0 5px rgba(106, 90, 205, 0.5);
        }

    /* Nút Đăng Nhập */
    .login-box button {
        width: 100%;
        padding: 10px;
        background: #6a5acd;
        color: #fff;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .login-box button:hover {
            background: #5a4cad;
        }

    /* Alert thông báo lỗi */
    .alert {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        font-size: 14px;
        color: #fff;
    }

    .alert-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
    }

</style>
<div class="login-container">
    <div class="login-logo">
        <img src="~/Images/logomilanotron.png" alt="Logo Milano" />
    </div>
    <div class="login-box">
        <h2>Đăng Nhập</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["Error"]
            </div>
        }

        <form role="form" method="post">
            <div class="form-group">
                <label for="user">Tài khoản:</label>
                <input type="text" class="form-control" id="user" name="user" required placeholder="User Name" />
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu:</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Password" />
            </div>
            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        </form>
    </div>
</div>
