
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
}
<style>
    /*css cho index home trang chu*/
    /* Tạo hiệu ứng nền với gradient */
    .box {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        text-align: center;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        /* Thêm hiệu ứng hover cho box */
        .box:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

        /* Định dạng màu sắc cho từng loại box */
        .box.purple {
            background: linear-gradient(135deg, #8e44ad, #d1c4e9);
            color: #fff;
        }

        .box.olive {
            background: linear-gradient(135deg, #3c763d, #b7d9a1);
            color: #fff;
        }

        .box.red {
            background: linear-gradient(135deg, #d9534f, #f6b9b9);
            color: #fff;
        }

        .box.aqua {
            background: linear-gradient(135deg, #5bc0de, #c8e6f5);
            color: #fff;
        }

        /* Style cho tiêu đề và mô tả */
        .box .inner h3 {
            font-size: 24px;
            margin: 0;
            font-weight: bold;
        }

        .box .inner p {
            margin-top: 10px;
            font-size: 14px;
        }

    /* Tạo hiệu ứng cho phần footer */
    .box-footer {
        display: inline-block;
        margin-top: 15px;
        padding: 8px 15px;
        border-radius: 5px;
        background-color: #333;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
    }

        /* Hiệu ứng hover cho nút */
        .box-footer:hover {
            background-color: #555;
            transform: translateY(-2px);
        }

    /* Thêm hiệu ứng icon */
    .icon img {
        display: block;
        margin: 0 auto;
        transition: transform 0.3s;
    }

        /* Hiệu ứng hover cho icon */
        .icon img:hover {
            transform: scale(1.1);
        }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .col {
        flex: 1 1 calc(20% - 15px);
        box-sizing: border-box;
    }


    /*css cho slide*/
    .slider img {
        height: 400px; /* Chiều cao ảnh */
        object-fit: cover;
    }

    .carousel-indicators button {
        background-color: #333;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1); /* Đổi màu nút điều hướng */
    }
</style>
