@model MILANO_64131856.Models.PhieuNhap

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Xóa Phiếu Nhập</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        h3 {
            color: #d9534f;
        }

        h4 {
            color: #5bc0de;
        }

        .form-actions {
            margin-top: 20px;
            text-align: right;
        }

        .btn {
            padding: 10px 20px;
            color: #fff;
            background-color: #d9534f;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn:hover {
                background-color: #c9302c;
            }

        .btn-default {
            background-color: #f8f8f8;
            color: #333;
            border: 1px solid #ccc;
        }

            .btn-default:hover {
                background-color: #e7e7e7;
            }

        .form-actions a {
            padding: 10px 20px;
            background-color: #5bc0de;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

            .form-actions a:hover {
                background-color: #31b0d5;
            }

        dl dt {
            font-weight: bold;
            margin-bottom: 5px;
        }

        dl dd {
            margin-left: 0;
            margin-bottom: 15px;
            font-size: 16px;
            color: #555;
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>Bạn có chắc chắn muốn xóa Phiếu Nhập này?</h3>
        <div>
            <h4>Thông Tin Phiếu Nhập</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Ngày nhập
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NgayNhap)
                </dd>

                <dt>
                    Tổng tiền
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TongTien)
                </dd>

                <dt>
                    Nhà cung cấp
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.NhaCungCap.TenNCC)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <input type="submit" value="Xóa" class="btn btn-default" /> |
                    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-default" })
                </div>
            }
        </div>
    </div>
</body>
</html>
