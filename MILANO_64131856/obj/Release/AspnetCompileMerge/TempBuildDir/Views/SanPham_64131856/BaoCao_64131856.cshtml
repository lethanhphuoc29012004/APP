@model MILANO_64131856.Models.BaoCao_64131856
@{
    ViewBag.Title = "BaoCao_64131856";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@{
    ViewBag.Title = "Báo cáo tồn kho";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        /* Tổng thể của trang */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
        }

        /* Container chính */
        .container {
            max-width: 1200px;
            margin: 30px auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Tiêu đề */
        h1 {
            color: #34495e;
            border-bottom: 2px solid #34495e;
            padding-bottom: 10px;
            margin-bottom: 20px;
            text-align: center;
        }

        /* Bảng dữ liệu */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

            .table th, .table td {
                padding: 12px;
                border: 1px solid #ddd;
                text-align: center;
                font-size: 16px;
            }

            .table th {
                background-color: #3498db;
                color: #fff;
                border-top: 2px solid #2980b9;
            }

            .table tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table tr:hover {
                background-color: #e3f2fd;
            }

        /* Tổng số lượng tồn và tổng tiền tồn */
        .summary {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            padding: 15px;
            background-color: #dff9fb;
            border-radius: 10px;
            box-shadow: 0 3px 5px rgba(0, 0, 0, 0.1);
        }

            .summary div {
                font-size: 18px;
                font-weight: bold;
            }

            .summary .total {
                color: #27ae60;
            }

        /* Nút bấm */
        button {
            background-color: #2ecc71;
            color: #fff;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 15px;
            display: block;
            margin-left: auto;
            margin-right: auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #27ae60;
            }

        /* Biểu tượng tiền tệ */
        .currency-symbol {
            font-size: 0.9em;
            color: #27ae60;
            font-weight: bold;
            margin-left: 5px;
        }

        .back-link {
            display: inline-block;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #28a745; /* Màu xanh lá */
            transition: background-color 0.3s, transform 0.3s;
        }

            .back-link:hover {
                background-color: #218838; /* Xanh lá đậm */
                color: white;
                transform: translateY(-3px);
            }
    </style>
</head>
@Html.ActionLink("< Trang Chủ", "Index", "Home", null, new { @class = "back-link" })
<body>
    <div class="container">
        <h1>Báo cáo tồn kho</h1>

        <!-- Bảng danh sách sản phẩm -->
        <table class="table">
            <thead>
                <tr>
                    <th>Tên Sản Phẩm</th>
                    <th>Số Lượng Tồn</th>
                    <th>Tổng Tiền Tồn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.TenSanPham</td>
                        <td>@product.SoLuongTon</td>
                        <td>@product.TongTienTon.ToString("N0") <span class="currency-symbol">VNĐ</span></td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Tóm tắt tổng số lượng và tổng tiền tồn -->
        <div class="summary">
            <div>Tổng Số Lượng Tồn: <span class="total">@Model.TongSoLuongTon</span></div>
            <div>Tổng Tiền Tồn: <span class="total">@Model.TongTienTon.ToString("N0")</span> <span class="currency-symbol">VNĐ</span></div>
        </div>

        <button onclick="window.print()">In báo cáo</button>
    </div>
</body>

</html>

