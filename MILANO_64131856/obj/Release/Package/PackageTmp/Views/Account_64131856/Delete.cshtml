@model MILANO_64131856.Models.Account

@{
    ViewBag.Title = "Xóa tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; color: #d9534f;">XÓA TÀI KHOẢN</h2>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f3f4f6;
    }

    .delete-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #d9534f;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 24px;
    }

    .form-actions {
        text-align: center;
        margin-top: 20px;
    }

    .btn-delete {
        background-color: #d9534f;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 4px;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s;
    }

        .btn-delete:hover {
            background-color: #c9302c;
            transform: scale(1.05);
        }

    .back-link {
        color: #337ab7;
        text-decoration: none;
        font-weight: bold;
        font-size: 14px;
        margin-left: 10px;
        transition: color 0.3s;
    }

        .back-link:hover {
            color: #23527c;
        }

    dt {
        font-weight: bold;
        color: #555;
        margin-top: 10px;
    }

    dd {
        margin-bottom: 10px;
    }
</style>

<div class="delete-container">
    <h4>Bạn có chắc chắn muốn xóa tài khoản này không?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên tài khoản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            Mật khẩu:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pass)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions">
            <input type="submit" value="Xóa" class="btn-delete" />
            <a href="@Url.Action("Index")" class="back-link">Quay lại danh sách</a>
        </div>
    }
</div>
