@model MILANO_64131856.Models.Account

@{
    ViewBag.Title = "Chi tiết tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; color: #0056b3;">CHI TIẾT TÀI KHOẢN</h2>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f3f4f6;
        margin: 0;
        padding: 0;
    }

    .details-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
    }

    h4 {
        color: #333;
        text-transform: uppercase;
        text-align: center;
        margin-bottom: 24px;
    }

    .dl-horizontal dt {
        font-weight: bold;
        color: #0056b3;
        width: 150px;
        float: left;
        clear: left;
        text-align: left;
        margin-right: 15px;
        font-size: 14px;
    }

    .dl-horizontal dd {
        margin-left: 165px;
        font-size: 14px;
        line-height: 1.6;
    }

    .action-links {
        text-align: center;
        margin-top: 20px;
    }

        .action-links a {
            color: #0056b3;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
            margin: 0 10px;
            transition: color 0.3s, transform 0.2s;
        }

            .action-links a:hover {
                color: #003d80;
                transform: scale(1.1);
            }
</style>

<div class="details-container">
    <h4>Thông tin chi tiết tài khoản</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên tài khoản:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Username)
        </dd>

        <dt>
            Mật khẩu:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pass)
        </dd>
    </dl>
</div>

<div class="action-links">
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.AccountID }, new { @class = "edit-link" }) |
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "back-link" })
</div>
