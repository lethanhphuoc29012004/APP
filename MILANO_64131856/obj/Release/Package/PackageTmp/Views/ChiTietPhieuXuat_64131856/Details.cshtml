@model MILANO_64131856.Models.ChiTietPhieuXuat

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chi tiết phiếu xuất</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h4 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
            font-size: 26px;
            font-weight: bold;
        }

        .dl-horizontal {
            display: grid;
            grid-template-columns: 150px 1fr;
            gap: 15px 20px;
            align-items: center;
        }

            .dl-horizontal dt {
                font-weight: bold;
                color: #2c3e50;
                text-transform: uppercase;
            }

            .dl-horizontal dd {
                padding: 8px 12px;
                border: 1px solid #ddd;
                border-radius: 4px;
                background-color: #f9f9f9;
                color: #333;
                font-size: 16px;
            }

            .dl-horizontal dt::after {
                content: ':';
                color: #2c3e50;
            }

        .currency {
            display: inline-block;
            margin-left: 5px;
            font-size: 14px;
            color: #2c3e50;
        }

        p {
            text-align: center;
            margin-top: 20px;
        }

        a {
            color: #ffffff;
            text-decoration: none;
            font-weight: bold;
            background-color: #3498db;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
            margin: 0 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            a:hover {
                background-color: #2980b9;
                transform: translateY(-3px);
            }

            a:active {
                background-color: #1c5f8a;
                transform: translateY(0);
            }
    </style>
</head>
<body>
    <div class="container">
        <h4>Chi tiết phiếu xuất</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Số lượng</dt>
            <dd>
                @Html.DisplayFor(model => model.SoLuong)
                
            </dd>

            <dt>Đơn giá</dt>
            <dd>@Html.DisplayFor(model => model.DonGia)
                <span class="currency">VNĐ</span>
            </dd>

            <dt>Thành tiền</dt>
            <dd>
                @Html.DisplayFor(model => model.ThanhTien)
                <span class="currency">VNĐ</span>
            </dd>

            <dt>Mã phiếu xuất</dt>
            <dd>@Html.DisplayFor(model => model.PhieuXuat.MaPhieuXuat)</dd>

            <dt>Tên sản phẩm</dt>
            <dd>@Html.DisplayFor(model => model.SanPham.TenSanPham)</dd>
        </dl>
    </div>
    <p>
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaChiTietXuat }) |
        @Html.ActionLink("Quay lại danh sách", "Index")
    </p>
</body>
</html>
