@model MILANO_64131856.Models.PhieuNhap

@{
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Chi tiết Phiếu Nhập</title>
    <style>
        .form-horizontal {
            margin: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

            .form-horizontal dl {
                display: flex;
                flex-wrap: wrap;
            }

            .form-horizontal dt {
                width: 150px;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .form-horizontal dd {
                margin-bottom: 10px;
                flex: 1;
            }

            .form-horizontal dd,
            .form-horizontal dt {
                margin-right: 20px;
            }

            .form-horizontal .form-actions {
                margin-top: 20px;
                text-align: right;
            }

            .form-horizontal input[type="submit"],
            .form-horizontal a {
                padding: 10px 20px;
                background-color: #4CAF50;
                color: white;
                border: none;
                border-radius: 3px;
                text-decoration: none;
            }

                .form-horizontal input[type="submit"]:hover,
                .form-horizontal a:hover {
                    background-color: #45a049;
                }

            .form-horizontal .btn-back {
                background-color: #e7e7e7;
                color: #333;
            }

                .form-horizontal .btn-back:hover {
                    background-color: #d6d6d6;
                }
    </style>
</head>
<body>
    <div class="form-horizontal">
        <h4>Thông Tin Phiếu Nhập</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Ngày nhập</dt>
            <dd>
                @Html.DisplayFor(model => model.NgayNhap)
            </dd>

            <dt>Tổng tiền</dt>
            <dd>
                @Html.DisplayFor(model => model.TongTien)
                <span class="currency">VNĐ</span>
            </dd>

            <dt>Nhà cung cấp</dt>
            <dd>
                @Html.DisplayFor(model => model.NhaCungCap.TenNCC)
            </dd>
        </dl>

        <div class="form-actions">
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaPhieuNhap }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Quay lại danh sách", "Index", new { @class = "btn btn-back" })
        </div>
    </div>
</body>
</html>
