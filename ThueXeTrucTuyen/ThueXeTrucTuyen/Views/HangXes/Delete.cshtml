@model ThueXeTrucTuyen.Models.HangXe

@{
    ViewBag.Title = "Xóa hãng xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">🗑️ Xóa hãng xe</h2>

<h3 class="text-warning">⚠️ Bạn có chắc chắn muốn xóa hãng xe này?</h3>

<div class="card shadow-sm border rounded p-3 bg-light">
    <h4 class="text-info">🔍 Thông tin hãng xe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold text-secondary">Tên hãng:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ten_hang)</dd>

        <dt class="col-sm-3 font-weight-bold text-secondary">Quốc gia:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.quoc_gia)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="mt-3 text-center">
        <button type="submit" class="btn btn-danger">🗑️ Xóa</button>
        @Html.ActionLink("🚫 Hủy", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}

<style>
    .card {
        max-width: 500px;
        margin: auto;
        background: white;
    }

    .row dt {
        text-align: right;
    }

    .text-secondary {
        font-size: 1.1em;
    }
</style>
