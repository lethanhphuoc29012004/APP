@model ThueXeTrucTuyen.Models.NhanVien

@{
    ViewBag.Title = "Thêm Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary text-center">➕ Thêm Nhân Viên</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
        <h4 class="text-secondary text-center">Thông Tin Nhân Viên</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.ho_ten, "Họ và Tên", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">👤</span>
                @Html.EditorFor(model => model.ho_ten, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập họ và tên" } })
            </div>
            @Html.ValidationMessageFor(model => model.ho_ten, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.so_dien_thoai, "Số Điện Thoại", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">📞</span>
                @Html.EditorFor(model => model.so_dien_thoai, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập số điện thoại" } })
            </div>
            @Html.ValidationMessageFor(model => model.so_dien_thoai, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.tai_khoan, "Tài Khoản", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">🔑</span>
                @Html.EditorFor(model => model.tai_khoan, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tài khoản" } })
            </div>
            @Html.ValidationMessageFor(model => model.tai_khoan, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.mat_khau, "Mật Khẩu", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">🔒</span>
                @Html.PasswordFor(model => model.mat_khau, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
            </div>
            @Html.ValidationMessageFor(model => model.mat_khau, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.dia_chi, "Địa Chỉ", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">📍</span>
                @Html.EditorFor(model => model.dia_chi, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ" } })
            </div>
            @Html.ValidationMessageFor(model => model.dia_chi, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.chuc_vu, "Chức Vụ", new { @class = "form-label" })
            <div class="input-group">
                <span class="input-group-text">💼</span>
                @Html.DropDownListFor(model => model.chuc_vu,
                    new List<SelectListItem>
                    {
                        new SelectListItem { Text = "Admin", Value = "Admin" },
                        new SelectListItem { Text = "Nhân viên hỗ trợ", Value = "Nhan vien ho tro" }
                    },
                    "Chọn chức vụ",
                    new { @class = "form-control" }
                )
            </div>
            @Html.ValidationMessageFor(model => model.chuc_vu, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-center gap-3 mt-3">
            <button type="submit" class="btn btn-success px-4">✔️ Lưu</button>
            @Html.ActionLink("❌ Hủy", "Index", null, new { @class = "btn btn-secondary px-4" })
        </div>
    </div>
}

<style>
    /* Card giao diện */
    .card {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Ô nhập liệu */
    .input-group-text {
        background-color: #f8f9fa;
        border-right: none;
    }

    /* Hiệu ứng nút */
    .btn {
        font-weight: bold;
        min-width: 120px;
    }

    .btn-success {
        background-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
        }
</style>
