@model ThueXeTrucTuyen.Models.NhanVien

@{
    ViewBag.Title = "Xóa Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">⚠️ Xóa Nhân Viên</h2>

<h4 class="text-warning">Bạn có chắc chắn muốn xóa nhân viên này?</h4>

<div class="card shadow-sm p-4">
    <h4 class="text-secondary">Thông Tin Nhân Viên</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 font-weight-bold">Họ và Tên:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.ho_ten)</dd>

        <dt class="col-sm-4 font-weight-bold">Số Điện Thoại:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.so_dien_thoai)</dd>

        <dt class="col-sm-4 font-weight-bold">Tài Khoản:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.tai_khoan)</dd>

        <dt class="col-sm-4 font-weight-bold">Mật Khẩu:</dt>
        <dd class="col-sm-8">******</dd> @* Ẩn mật khẩu *@

        <dt class="col-sm-4 font-weight-bold">Địa Chỉ:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.dia_chi)</dd>

        <dt class="col-sm-4 font-weight-bold">Chức Vụ:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.chuc_vu)</dd>
    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">🗑️ Xóa</button>
        @Html.ActionLink("❌ Hủy", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}
<style>
    /* Card thông tin */
    .card {
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .card h4 {
            color: #dc3545;
        }

    /* Nút bấm */
    .btn {
        font-weight: bold;
        min-width: 120px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

</style>