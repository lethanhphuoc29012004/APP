@model IEnumerable<ThueXeTrucTuyen.Models.KhachHang>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách khách hàng</h2>

<p>
    @Html.ActionLink("Thêm khách hàng mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Họ và tên</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Đã duyệt</th>
            <th>Tên xe muốn thuê</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ho_ten)</td>
                <td>@Html.DisplayFor(modelItem => item.so_dien_thoai)</td>
                <td>@Html.DisplayFor(modelItem => item.dia_chi)</td>
                <td class="text-center">
                    <input type="checkbox" disabled @(item.trang_thai == "Da Duyet" ? "checked" : "") />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Xe.ten_xe)</td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-sm" }) 
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.id }, new { @class = "btn btn-info btn-sm" }) 
                    @Html.ActionLink("Xóa", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    /* Định dạng bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
    }

        /* Header bảng */
        .table thead {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }

        .table th, .table td {
            text-align: center;
            padding: 12px;
            border: 1px solid #dee2e6;
        }

        /* Hiệu ứng hover cho hàng */
        .table tbody tr:hover {
            background-color: #f1f1f1;
            transition: background 0.3s;
        }

    /* Nút thao tác */
    .btn {
        padding: 5px 12px;
        font-size: 14px;
        border-radius: 5px;
        transition: 0.3s;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #000;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #17a2b8;
        color: #fff;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Checkbox */
    input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: #28a745;
        cursor: pointer;
    }

    /* Phần tiêu đề */
    h2 {
        text-align: center;
        font-weight: bold;
        margin-bottom: 20px;
        color: #343a40;
    }

    /* Căn chỉnh container */
    .container {
        max-width: 90%;
        margin: auto;
    }

</style>
