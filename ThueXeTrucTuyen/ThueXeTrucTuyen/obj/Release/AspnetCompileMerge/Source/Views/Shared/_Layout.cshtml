@RenderSection("scripts", required: false)
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thuê Xe Trực Tuyến</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/StyleAdmin.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            background-color: white;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

            .header-container img {
                height: 100px;
            }

        .user {
            font-size: 16px;
            font-weight: bold;
            color: black;
        }

        #menu {
            position: fixed;
            top: 130px; /* chiều cao header khoảng 100px + padding */
            left: 0;
            right: 0;
            z-index: 1020;
            background: linear-gradient(135deg, #007bff, #0056b3);
            padding: 15px 0;
            text-align: center;
            border-radius: 0;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

            #menu a {
                color: white;
                padding: 12px 25px;
                margin: 5px;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                font-weight: bold;
                text-transform: uppercase;
                border-radius: 30px;
                transition: all 0.3s ease-in-out;
                background: rgba(255, 255, 255, 0.1);
            }

                #menu a:hover {
                    background: rgba(255, 255, 255, 0.3);
                    transform: scale(1.1);
                    box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
                }


        #content {
            padding: 20px;
            background: white;
            min-height: 500px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 220px;
        }
    </style>
</head>
<body>
    <div class="header-container">
        <div id="header">
            <img src="~/Images/tbikelogo.jpg" alt="tbike Logo">
        </div>
        <div class="user">
            Xin chào <span style="color: blue;font-size:20px;">@HttpContext.Current.Session["user"]</span>
        </div>
    </div>

    <div id="menu">
        @*@Html.ActionLink("TRANG CHỦ", "../Home/Index", "", new { @class = "a" })*@
        @Html.ActionLink("THUÊ XE", "../Xes/Index", "", new { @class = "a" })
        @Html.ActionLink("ĐƠN THUÊ XE", "../DonThueXes/Index", "", new { @class = "a" })
        @Html.ActionLink("NHÂN SỰ", "../NhanViens/Index", "", new { @class = "a" })
        @Html.ActionLink("KHÁCH HÀNG", "../KhachHangs/Index", "", new { @class = "a" })
        @Html.ActionLink("THỐNG KÊ DOANH THU", "../DoanhThus/BaoCaoDoanhThu", "", new { @class = "a" })
        @Html.ActionLink("ĐÁNH GIÁ", "../DanhGias/Index", "", new { @class = "a" })
        @Html.ActionLink("ĐĂNG XUẤT", "../Home/DangNhap", "", new { @class = "a" })
    </div>

    <div class="container">
        <div id="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
