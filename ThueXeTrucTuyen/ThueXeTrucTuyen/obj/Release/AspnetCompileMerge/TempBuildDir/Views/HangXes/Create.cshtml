@model ThueXeTrucTuyen.Models.HangXe

@{
    ViewBag.Title = "Thêm Hãng Xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">🚗 Thêm Hãng Xe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm border rounded p-4 bg-light">
        <h4 class="text-info">📌 Nhập thông tin hãng xe</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ten_hang, "Tên Hãng", htmlAttributes: new { @class = "control-label font-weight-bold" })
            @Html.EditorFor(model => model.ten_hang, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên hãng xe..." } })
            @Html.ValidationMessageFor(model => model.ten_hang, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quoc_gia, "Quốc Gia", htmlAttributes: new { @class = "control-label font-weight-bold" })
            @Html.EditorFor(model => model.quoc_gia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập quốc gia..." } })
            @Html.ValidationMessageFor(model => model.quoc_gia, "", new { @class = "text-danger" })
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success">✅ Lưu</button>
            @Html.ActionLink("❌ Hủy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

<style>
    .card {
        max-width: 500px;
        margin: auto;
        background: white;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .text-primary {
        font-size: 1.8em;
        font-weight: bold;
    }

    .font-weight-bold {
        font-size: 1.1em;
    }
</style>
