@model ThueXeTrucTuyen.Models.HangXe

@{
    ViewBag.Title = "Chỉnh sửa hãng xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">✏️ Chỉnh sửa hãng xe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal p-3 border rounded shadow-sm bg-light">
        <h4>Thông tin hãng xe</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.ten_hang, "Tên hãng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten_hang, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên hãng xe" } })
                @Html.ValidationMessageFor(model => model.ten_hang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.quoc_gia, "Quốc gia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.quoc_gia, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập quốc gia xuất xứ" } })
                @Html.ValidationMessageFor(model => model.quoc_gia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group text-center mt-3">
            <input type="submit" value="💾 Lưu thay đổi" class="btn btn-success" />
            @Html.ActionLink("❌ Hủy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

<style>
    .form-horizontal {
        max-width: 600px;
        margin: auto;
        background: white;
    }

    .form-group {
        margin-bottom: 15px;
    }

    h4 {
        font-weight: bold;
        color: #007bff;
    }
</style>
