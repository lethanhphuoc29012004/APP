@model ThueXeTrucTuyen.Models.Xe

@{
    ViewBag.Title = "Thêm xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="font-weight:bolder;color:blue;">Thêm xe mới</h2>

@using (Html.BeginForm("Create", "Xes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-container">
        <h2>Thông tin xe</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-row">
        <div class="form-group">
            @Html.Label("Mã xe")
            <div class="form-control-plaintext">
                @Html.DisplayFor(model => model.id)
            </div>
            @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.Label("Tên xe")
            @Html.EditorFor(model => model.ten_xe, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ten_xe, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.Label("Biển số")
            @Html.EditorFor(model => model.bien_so, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.bien_so, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-row">
            <div class="form-group">
                @Html.Label("Hãng xe")
                @Html.DropDownList("id_hang_xe", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_hang_xe, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Năm sản xuất")
                @Html.EditorFor(model => model.nam_san_xuat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nam_san_xuat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                @Html.Label("Loại xe")
                @Html.EditorFor(model => model.loai_xe, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.loai_xe, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.Label("Giá thuê/ngày")
                @Html.EditorFor(model => model.gia_thue_ngay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.gia_thue_ngay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(model => model.hinh_xe, "Ảnh Sản Phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="Avatar" />
                    @Html.ValidationMessageFor(model => model.hinh_xe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Trạng thái")
                @Html.EditorFor(model => model.trang_thai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.trang_thai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group submit-row">
            <input type="submit" value="Thêm mới" class="btn btn-primary" />
            @Html.ActionLink("Quay về danh sách", "Index", null, new { @class = "btn btn-link" })
        </div>
    </div>
}
<style>
    .form-container {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        max-width: 900px;
        margin: auto;
    }

    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: 600;
            margin-bottom: 5px;
        }

    .form-control {
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    .text-danger {
        color: red;
        font-size: 0.85em;
        margin-top: 5px;
    }

    .submit-row {
        text-align: right;
        margin-top: 30px;
    }

    .btn-primary {
        padding: 10px 20px;
        border-radius: 6px;
        background-color: #007bff;
        border: none;
        color: white;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    h2 {
        text-align: center;
    }
</style>