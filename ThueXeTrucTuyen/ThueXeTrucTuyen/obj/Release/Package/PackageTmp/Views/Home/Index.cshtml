<style>
    /* CSS cải tiến với màu sắc hiện đại */
    .box {
        border-radius: 12px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        padding: 20px;
        text-align: center;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .box:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .box.honda {
            background: linear-gradient(135deg, #e60000, #ff6666);
            color: #fff;
        }

        .box.yamaha {
            background: linear-gradient(135deg, #0033cc, #6699ff);
            color: #fff;
        }

        .box.suzuki {
            background: linear-gradient(135deg, #ffcc00, #ffeb99);
            color: #fff;
        }

        .box.piaggio {
            background: linear-gradient(135deg, #009999, #66cccc);
            color: #fff;
        }

        .box.vinfast {
            background: linear-gradient(135deg, #660000, #cc3333);
            color: #fff;
        }

        .box .inner h3 {
            font-size: 24px;
            font-weight: bold;
        }

        .box .inner p {
            margin-top: 10px;
            font-size: 16px;
        }

    .box-footer {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        border-radius: 8px;
        background-color: #222;
        color: #fff;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.3s, transform 0.3s;
    }

        .box-footer:hover {
            background-color: #444;
            transform: translateY(-2px);
        }
</style>

<section class="content">
    <div class="row">
        <div class="col">
            <div class="box honda">
                <div class="inner">
                    <h3>HONDA</h3>
                    <p>Thương hiệu xe máy hàng đầu Nhật Bản</p>
                </div>
                <div class="icon">
                    <img style="height:70px;" src="~/Images/honda.jpg" />
                </div>
                @Html.ActionLink("More info", "Index", "Honda", new { @class = "box-footer" })
            </div>
        </div>

        <div class="col">
            <div class="box yamaha">
                <div class="inner">
                    <h3>YAMAHA</h3>
                    <p>Phong cách và hiệu suất mạnh mẽ</p>
                </div>
                <div class="icon">
                    <img style="height:70px;width:auto;" src="~/Images/ymh.jpg" />
                </div>
                @Html.ActionLink("More info", "Index", "Yamaha", new { @class = "box-footer" })
            </div>
        </div>

        <div class="col">
            <div class="box suzuki">
                <div class="inner">
                    <h3>SUZUKI</h3>
                    <p>Công nghệ tiên tiến từ Nhật Bản</p>
                </div>
                <div class="icon">
                    <img style="height:70px;" src="~/Images/su.jpg" />
                </div>
                @Html.ActionLink("More info", "Index", "Suzuki", new { @class = "box-footer" })
            </div>
        </div>

        <div class="col">
            <div class="box piaggio">
                <div class="inner">
                    <h3>PIAGGIO</h3>
                    <p>Thiết kế đậm chất châu Âu</p>
                </div>
                <div class="icon">
                    <img style="height:93px;width:auto;" src="~/Images/piago.jpg" />
                </div>
                @Html.ActionLink("More info", "Index", "Piaggio", new { @class = "box-footer" })
            </div>
        </div>

        <div class="col">
            <div class="box vinfast">
                <div class="inner">
                    <h3>VINFAST</h3>
                    <p>Hãng xe Việt Nam vươn tầm thế giới</p>
                </div>
                <div class="icon">
                    <img style="height:70px;" src="~/Images/vin.jpg" />
                </div>
                @Html.ActionLink("More info", "Index", "Vinfast", new { @class = "box-footer" })
            </div>
        </div>
    </div>
</section>
